#include <stdio.h>
void findNthMaxMin(int arr[], int n, int *nthMax, int *nthMin) {
    // Sorting the array in ascending order
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                // swapping if the element found is greater than the next element
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }

    // Nth maximum and Nth minimum elements
    *nthMax = arr[n - 1];
    *nthMin = arr[0];
}

int main() {
    int n;

    // Input the size of the array
    printf("Enter the size of the array: ");
    scanf("%d", &n);

    int arr[n];

    // Input the elements of the array
    printf("Enter the elements of the array:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int N;

    // Input the value of N
    printf("Enter the value of N: ");
    scanf("%d", &N);

    int nthMax, nthMin;

    // Function call to find Nth maximum and Nth minimum
    findNthMaxMin(arr, n, &nthMax, &nthMin);

    // Display the Nth maximum and Nth minimum
    printf("Nth Maximum: %d\n", nthMax);
    printf("Nth Minimum: %d\n", nthMin);

    // Calculate and display the sum and difference
    int sum = nthMax + nthMin;
    int diff = nthMax - nthMin;

    printf("Sum: %d\n", sum);
    printf("Difference: %d\n", diff);

    return 0;
}
